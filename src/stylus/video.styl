tile-radius = 3px

tile-header-color = #333
tile-text-color = #494F59
tile-sub-info-color = #8a8f9c
button-text-color = #696F7D
button-icon-color = #999ea8

footer-height = 58px//82px
header-height = 39px

.video-grid
    width: 900px
    margin: 0 auto
    color: tile-text-color

    md-grid-list
        md-grid-tile
            font-size: 13px
            line-height: 17px
            
            > figure
                border-radius: tile-radius
                box-shadow: 0 2px 0px rgba(0, 0, 0, 0.01),0 0 0 1px #DBDBDC
                overflow: hidden
                padding-bottom: footer-height
                
                > a
                    display: block
                    height: 100%
                    width: 100%

                .image
                    display: block
                    height: 100%
                    width: 100%
                    overflow: hidden
                    background-repeat: no-repeat
                    background-position: 50% 50%
                    background-size: cover
                    
                    img
                        display: none
            
            md-grid-tile-header
                border-top-right-radius: tile-radius
                border-top-left-radius: tile-radius
                background: #fff
                color: tile-header-color
                height: header-height
                
                figcaption
                    width: 100%

                h2
                    margin: 11px
                    font-weight: bold
                    font-size: 13px
                    line-height: 17px

            md-grid-tile-footer
                border-bottom-right-radius: tile-radius
                border-bottom-left-radius: tile-radius
                background: #fff
                color: tile-text-color
                height: footer-height
                align-items: flex-end
                
                figcaption
                    width: 100%

                h3
                    margin: 11px 11px 0
                    font-size: 13px
                    line-height: 19px
                    
                    a
                        color: tile-text-color
                        text-decoration: none
                        font-weight: normal
                        
                        &:hover
                            color: tile-header-color

                .sub-info
                    //margin: 0 11px
                    margin: 0 11px 11px
                    color: tile-sub-info-color
                    font-size: 12px

                .buttons
                    padding: 4px 8px
                    
                    .md-button.md-icon-button
                        min-width: auto
                        width: auto
                        height: 28px
                        line-height: 28px
                        min-height: 28px
                        color: button-text-color
                        opacity: 0.5
                        padding: 0 2px
                        font-size: 12px
                        margin: 0 2px

                        &.etc
                            opacity: 0.3

                        &:hover
                            opacity: 0.9
                            
                        .fa
                            font-size: 16px
                            color: button-icon-color
                            position: relative
                            top: 1px
                            
                        &.md-accent
                            .fa
                                color: brand-green
                            
md-dialog.video-popup
    background: transparent
    box-shadow: none
    max-height: none
    max-width: none

    .video-container
        width: 940px
        height: 530px
        overflow: hidden
        position: relative
        background: #000
        
        iframe
            width: 100%
            height: 100%
            position: absolute
            top: 0
            left: 0
            
        .video-close
            position: absolute
            top: 10px
            right: 0px
            opacity: 0.3
            color: #fff
            
            &:hover
                opacity: 0.5
                
            .fa
                font-size: 30px
                
        .video-loading
            position: absolute
            left: 0
            right: 0
            top: 0
            padding: 120px
            text-align: center
            color: #fff
            
            .md-button[disabled]
                color: rgba(255,255,255,0.26);
          
@media (max-width: 959px)
    md-dialog.video-popup
        .video-container
            width: 900px
            height: 506px

@media (max-width: 900px)
    md-dialog.video-popup
        .video-container
            width: 800px
            height: 450px

@media (max-width: 800px)
    md-dialog.video-popup
        .video-container
            width: 640px
            height: 360px
