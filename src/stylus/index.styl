@import colors
@import login

body
    background-color: bg

// Top navigation
.cb-top-menu
    //border-top: 6px solid brand-green
    //transition: all 0.3s ease-in;
    background-color: menu-bg !important
    font-weight: bold
    padding: 0 30px
    position: fixed
    
    &.md-tall
        max-height: none
        height: auto

    // Sign up/user menu item
    .cb-user-menu
        color: brand-green !important
        &:hover
            background-color: rgba(76,175,80,.2)
    

    // Brand menu item
    .cb-brand-menu
        border-radius: 0
        text-indent: -1000em
        width: 180px
        height: 100%
        background: url(/images/brand.png) no-repeat center center
        &:hover
            background-color: transparent !important

    // Icon button
    .md-icon-button:hover
        background-color: rgba(158,158,158,0.2) !important



// Page content
.cb-page-content
    padding: 100px 0

// Footer
.page-footer
    background: footer-bg
    color: footer-text
    font-size: 13px
    border-top: 10px solid footer-border
    padding: 20px 0 20px
    
    section
        max-width: 1014px
        padding: 0 1.5rem
        margin: 0 auto

    p
        margin-bottom: 5px

    .brand-footer
        width: 120px
        height: 30px
        margin-bottom: 10px
        background: url(/images/brand-footer.png) no-repeat left top
    
    .brand-copyright
        font-size: 10px
        margin-bottom: 30px
        
        [class^=mdi-]
        [class*=mdi-]
            font-size: 14px

    for n in 1..6
        h{n}
            color: footer-heading
    
    a
        color: footer-text
        text-decoration: none
        font-weight: bold
        
        &:hover
            color: footer-text-hover
            text-decoration: underline
    
    ul.bottom-menu
        margin: 0 0 30px
        padding: 0

        li
            list-style: none
            margin-bottom: 10px

// Text alignment
.text-center
    text-align: center

// Font Awesome
.fa-spin.faster
    -webkit-animation: fa-spin 1s infinite linear;
    animation: fa-spin 1s infinite linear;

    
