@import colors
@import login
@import video

body, html
    background-color: bg
    color: body-text
    
body
    height: auto

// Top navigation
.cb-top-menu
    //border-top: 6px solid brand-green
    //transition: all 0.3s ease-in;
    background-color: menu-bg !important
    font-weight: bold
    position: fixed
    top: 0
    
    &.md-tall
        max-height: none
        min-height: 0
        height: auto

    // Sign up/user menu item
    .cb-user-menu
        color: brand-green !important
        &:hover
            background-color: rgba(76,175,80,.2)
    

    // Brand menu item
    .cb-brand-menu
        border-radius: 0
        text-indent: -1000em
        width: 64px
        height: 100%
        background: url(/images/brand.png) no-repeat center center
        background-size: 40px 40px
        opacity: 0.5
        transition: opacity .2s ease-in-out
        &:hover
            background-color: transparent !important
            opacity: 0.8

    // Icon button
    .md-icon-button:hover
        background-color: rgba(158,158,158,0.2) !important



// Page content
.cb-page-content
    padding: 100px 0

// Footer
.page-footer
    background: footer-bg
    color: footer-text
    font-size: 13px
    padding: 40px 0 20px
    
    section
        max-width: 1014px
        padding: 0 1.5rem
        margin: 0 auto

    p
        margin-bottom: 5px

    .brand-footer
        height: 30px
        margin-bottom: 10px
    
    .brand-copyright
        font-size: 10px
        margin-bottom: 30px
        
        [class^=mdi-]
        [class*=mdi-]
            font-size: 14px

    for n in 1..6
        h{n}
            color: footer-heading
    
    a
        color: footer-text
        text-decoration: none
        font-weight: bold
        
        &:hover
            color: footer-text-hover
            text-decoration: underline
    
    ul.bottom-menu
        margin: 0 0 30px
        padding: 0

        li
            list-style: none
            margin-bottom: 10px

@media (max-width: 960px)
    .page-footer
        text-align: center

.md-button[disabled]
    color: body-text-disabled

md-card
    color: body-text-inverse
    
    .md-button[disabled]
        color: body-text-disabled-inverse

// Text alignment
.text-center
    text-align: center

// Font Awesome
.fa-spin.faster
    -webkit-animation: fa-spin 1s infinite linear;
    animation: fa-spin 1s infinite linear;

    
