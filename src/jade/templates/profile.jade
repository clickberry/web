script(type="text/ng-template", id="profile.html")
    div(layout="row", layout-align="center")
        div(flex="25", flex-sm="0", flex-md="20")
        div(flex="50", flex-sm="100", flex-md="60")
            md-card
                md-card-content
                    div(layout="row")
                        div(flex="10")
                        div(flex="80")
                            h1.md-display-1 Profile details
                            form(name="profileform", ng-submit="submit(profile)")
                                div(flex="100", layout="row", layout-align="start center")
                                    .profile-avatar(ng-if="profile.avatarUrl", ng-style="{'background-image': 'url({{profile.avatarUrl}})'}")    
                                    span
                                        md-button.md-raised
                                            label(for="avatar-file") Change Avatar
                                        input(type="file", id="avatar-file", accept="image/jpeg,image/png", nv-file-select, uploader="uploader", ng-hide="true", ng-if="uploader")

                                md-input-container.md-title
                                    label Email
                                    input(required, type="email", name="profileEmail", ng-model="profile.email", minlength="10", maxlength="100", ng-pattern="/^.+@.+\..+$/")
                                md-input-container.md-title
                                    label Name
                                    input(required, type="text", name="profileName", ng-model="profile.name")
                                md-card-actions(layout="row", layout-align="end center")
                                    md-button(ng-href='#', ui-sref='home') Cancel
                                    md-button.md-raised.md-accent(type="submit", ng-disabled="profileform.$invalid || loading")
                                        i.fa.fa-circle-o-notch.fa-spin.faster(ng-show="loading") 
                                        span  Submit
                            div(flex="10")
        div(flex="25", flex-sm="0", flex-md="20")
