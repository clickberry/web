script(type="text/ng-template", id="signup.html")
    div(layout="row", layout-align="center")
        div(flex="25", flex-sm="0", flex-md="20")
        div(flex="50", flex-sm="100", flex-md="60")
            form(name="signupform", ng-submit="submit(signup)")
                md-card
                    md-card-content
                        div(layout="row")
                            div(flex="10")
                            div(flex="80")
                                h1.md-display-1 Sign up
                                p Sign up with your e-mail address
                                md-input-container.md-title
                                    label Email
                                    input(required, type="email", name="signupEmail", ng-model="signup.email", minlength="10", maxlength="100", ng-pattern="/^.+@.+\..+$/")
                                md-input-container.md-title
                                    label Password
                                    input(type="password", required, name="signupPassword", ng-model="signup.password", minlength="6")
                                md-input-container.md-title
                                    label Confirm Password
                                    input(type="password", required, name="signupConfirmPassword", ng-model="signup.confirmPassword" cb-confirm="signup.password")
                                md-card-actions(layout="row", layout-align="end center")
                                    md-button(ng-href='#', ui-sref='home') Cancel
                                    md-button.md-raised.md-accent(type="submit", ng-disabled="signupform.$invalid || loading")
                                        i.fa.fa-circle-o-notch.fa-spin.faster(ng-show="loading") 
                                        span  Submit
                            div(flex="10")
                p.md-body-1.text-center or register using your social identity
            .social-icons(layout="row", layout-padding, layout-align="center")
                md-button.md-fab.cb-facebook(aria-label="Facebook", ng-click="goFacebook()")
                    i.fa.fa-facebook
                md-button.md-fab.cb-twitter(aria-label="Twitter", ng-click="goTwitter()")
                    i.fa.fa-twitter
                md-button.md-fab.cb-google(aria-label="Google", ng-click="goGoogle()")
                    i.fa.fa-google
                md-button.md-fab.cb-vk(aria-label="Vk", ng-click="goVk()")
                    i.fa.fa-vk
        div(flex="25", flex-sm="0", flex-md="20")
